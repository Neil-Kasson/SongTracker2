<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#313030">
    <Button
            android:text="Click here to\nenter a song"
            android:layout_width="333dp"
            android:layout_height="200dp"
            android:id="@+id/enter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="25dp"/>
    <Button
            android:text="View Past Songs"
            android:layout_width="193dp"
            android:layout_height="0dp"
            android:id="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:paddingTop="20dp" android:paddingBottom="22dp"/>
    <TextView
            android:text="Do you have a song stuck in your head?\nWell, this app is for you!\nIt will keep track of your head songs for you!\nIf you click above, you can enter in the song,\nand if you click below, you can see a list of your previous songs and when they were stuck in your head.\n\nEnjoy!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="50dp" android:layout_marginEnd="50dp" android:background="#312F2F"
            android:textColor="#B9B9B9" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/enter" app:fontFamily="@font/bubblegum_sans"
            android:gravity="center"/>
    <TextView
            android:text="Welcome to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginRight="25dp" android:textColor="#B9B9B9"
            android:gravity="center" android:layout_marginTop="25dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="22sp" android:textStyle="bold" app:fontFamily="@font/almendra_sc"/>
    <TextView
            android:text="Song Tracker!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:textSize="30sp" android:textColor="#B9B9B9"
            app:fontFamily="@font/almendra_sc" android:textStyle="bold" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>