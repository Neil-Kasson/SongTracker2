<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnterActivity" android:background="#9F9EA2">

    <TextView
            android:text="Song:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115dp" android:textColor="#000000" app:fontFamily="@font/cinzel_decorative_bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|text"
            android:ems="10"
            android:id="@+id/song"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Enter Song Title"/>
    <TextView
            android:text="Artist:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textColor="#000000"
            app:fontFamily="@font/cinzel_decorative_bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/artist"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/song" android:hint="Optional"/>
    <Button
            android:text="Enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter"
            style="@android:style/Widget.Holo.Button.Inset" android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp" android:paddingTop="20dp"
            android:paddingBottom="22dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/artist"/>
    <Button
            android:text="Go Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            style="@android:style/Widget.Holo.Button.Inset" android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp" android:paddingTop="20dp"
            android:paddingBottom="22dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/enter"/>
</androidx.constraintlayout.widget.ConstraintLayout>